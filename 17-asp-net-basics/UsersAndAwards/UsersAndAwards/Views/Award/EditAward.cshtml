@model Entities.Award
@{ var currentaward = Model; }

<html>
<head>

</head>
<body>

    <main>

        <form method="post" class="form-horizontal" role="form">
            <input type="hidden" value="@currentaward.Id" name="Id" />
            <p>Information:</p>
            <div class="form-group">
                <label for="title" class="col-md-2 control-label">Title:</label>
                <div class="col-md-4">
                    <input value="@currentaward.Title" type="text" name="title" class="form-control"/>
                </div>
                <span asp-validation-for="Title"></span>
            </div>

            <div class="form-group">
                <label for="desc" class="col-md-2 control-label">Description:</label>
                <div class="col-md-4">
                    <input type="text" name="description" class="form-control" value="@currentaward.Description" required />
                </div>
            </div>



            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" class="btn btn-default" value="SAVE" />
                </div>
            </div>
        </form>

    </main>
</body>
</html>